// Write a function that receives 3 parameters, sets them to an object, and returns that object.
// The input comes as 3 separate strings in the following order: firstName, lastName, age.

function personInfo (firstName, lastName, age) {

    let person = {}
    person.firstName = firstName;
    person.lastName = lastName;
    person.age = age;

    return person;
}

let result1 = personInfo ("Peter", "Pan","20");
console.log (result1);

function personInfo (firstName, lastName, age) {

    let person = {}
    person['firstName'] = firstName;
    person ['lastName'] = lastName;
    person ['age'] = age;

    return person;
}

let result2 = personInfo ("Baba", "Marta","90");
console.log (result2);

function personInfo (firstName, lastName, age) {

    let person = {

        firstName,
        lastName,
        age,

    }
    
    return person;
}

let result3 = personInfo ("Diyado", "Mraz","100");
console.log (result3);
